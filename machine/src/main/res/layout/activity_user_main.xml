<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_main_white"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="showUserPutGoodActivity">

            <TextView
                style="@style/textview_item_style"
                android:drawableTop="@drawable/circle_delivery"
                android:text="我要寄件"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                style="@style/textview_item_style"
                android:text="@string/put_goods"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_main_white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="showUserGetGoodActivity">

            <TextView
                style="@style/textview_item_style"
                android:drawableTop="@drawable/circle_user"
                android:text="我要取件"
                android:textColor="@color/darkgreen" />

            <TextView
                style="@style/textview_item_style"
                android:text="@string/get_good"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
